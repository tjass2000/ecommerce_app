extends base

block content
    div
        h2 Login Page 
        p Please enter your login details!!
        form(action="/api/v1/auth/login", method="post") 
            label(for="emailInput") Email 
            input(name= "email" type="email" id="emailInput" placeholder="Enter your email address...", required)
            br
            label(for="passInput") Password
            input(name= "password" type="password" id="passInput" placeholder="Enter your password...", required)
            br
            button(type="submit") Login